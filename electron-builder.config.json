{
    "appId": "be.unamur.hello-electron",
    "productName": "Hello Electron",
    "copyright": "Copyright Â© 2024 ${author}",
    "extraFiles": {
        "from": "api/dist/",
        "to": "lib/",
        "filter": [
            "**/**"
        ]
    },
    "directories": {
        "output": "dist"
    },
    "win": {
        "target": "nsis",
        "icon": "public/assets/media/logo.png"
    },
    "linux": {
        "target": "AppImage",
        "icon": "public/assets/media/logo.png"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    }
}